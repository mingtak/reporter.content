<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="reporter.content">

    <configlet
        title="Homepage layout setting"
        action_id="reporter.content.configlet.homepagelayoutsetting"
        appId="reporter.content.configlet.homepagelayoutsetting"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@homepageLayoutSetting"
        icon_expr="string:/favicon.ico"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
